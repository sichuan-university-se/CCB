<!--index.wxml-->
<view class="container">
  <view class="swiper-tab">
    <view class="tab-item {{ currentTab == 0 ? 'on' : '' }}" data-current="0" bindtap="switchTab">校内需求</view>
    <view class="tab-item {{ currentTab == 1 ? 'on' : '' }}" data-current="1" bindtap="switchTab">活动组队</view>
    <view class="tab-item {{ currentTab == 2 ? 'on' : '' }}" data-current="2" bindtap="switchTab">闲置交易</view>
  </view>

  <swiper class="swiper" current="{{ currentTab }}" bindchange="swiperChange">
    <swiper-item>
      <view class="swiper-item">
        <swiper class="ad-swiper body shadow-blur bg-red margin-top bg-img" indicator-dots="true" autoplay="true" interval="3000">
          <swiper-item>
            <view class="ad-swiper-item">广告位招租</view>
          </swiper-item>
          <swiper-item>
            <view class="ad-swiper-item">广告位招租</view>
          </swiper-item>
          <swiper-item>
            <view class="ad-swiper-item">广告位招租</view>
          </swiper-item>
        </swiper>
        <view class="content body">
          <view class="select-header">
            <input class="search-input" placeholder="搜索" type="text" confirm-type="search" maxlength="10" />
            <button class="cu-btn round line-red">搜索</button>
          </view>
          <view class="cu-list menu-avatar">
            <view class="cu-item" wx:for="{{reqArray}}" wx:key bindtap="checkReqDetail" data-index="{{index}}">
              <view class="cu-avatar round lg" style="background-image:url(/assets/image/gakki{{index}}.jpg);"></view>
              <view class="content">
                <view class="text-grey">{{item.title}}</view>
                <view class="text-gray text-sm flex">
                  <text class="text-cut"> {{item.detail}} </text>
                </view>
              </view>
              <view class="action">
                <view class="text-grey text-xs">22:20</view>
              </view>
            </view>
          </view>
        </view>
      </view>
    </swiper-item>
    <swiper-item>
      <view class="swiper-item">
        <swiper class="ad-swiper body shadow-blur bg-red margin-top bg-img" indicator-dots="true" autoplay="true" interval="3000">
