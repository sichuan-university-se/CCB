/**index.wxss**/

swiper-item {
  overflow: scroll;
}

.container {
  width: 100%;
  height: 100%;
}

.swiper-tab {
  width: 100%;
  height: 40px;
  display: flex;
  justify-content: center;
  align-items: flex-start;
  box-shadow: 0 0 10rpx 0 #7a7070;
  color: #7a7070;
  background-color: #fff;
  z-index: 10;
}

.tab-item {
  line-height: 40px;
  flex: 1 0 auto;
  text-align: center;
}

.on {
  border-bottom: 1px solid red;
  color: black;
}

.swiper {
  width: 100%;
  margin-bottom: 48px;
}

.ad-swiper {
  height: 100px;
  border-radius: 10px;
}

.ad-swiper-item {
  text-align: center;
  line-height: 100px;
}

.goods-item {
  border: 1px solid #fff;
  border-radius: 20rpx;
  overflow: hidden;
}

.goods-item .goods-img {
  height: 350rpx;
  margin-bottom: 10rpx;
}

.goods-price {
  float: right;
}
