/**index.wxss**/

swiper-item {
  overflow: scroll;
}

.container {
  width: 100%;
  height: 100%;
}

.swiper-tab {
  width: 100%;
  height: 40px;
  display: flex;
  justify-content: center;
  align-items: flex-start;
  box-shadow: 0 0 10rpx 0 #7a7070;
  color: #7a7070;
  background-color: #fff;
  z-index: 10;
}

.tab-item {
  line-height: 40px;
  flex: 1 0 auto;
  text-align: center;
}

.on {
  border-bottom: 1px solid red;
  color: black;
}

.swiper {
  width: 100%;
}

.ad-swiper {
  height: 100px;
  border-radius: 10px;
}

.cu-list {
  border-radius: 20rpx;
}

.cu-list.menu-avatar>.cu-item>.act-avatar {
  position: absolute;
  right: 30rpx;
  width: 96rpx;
  height: 96rpx;
  font-size: 2em;
}

.cu-list.menu-avatar>.cu-item>.act-content {
  position: absolute;
  left: 40rpx;
  width: 500rpx;
  line-height: 1.6em;
}

.cu-list.menu-avatar>.cu-item>.act-time {
  position: absolute;
  right: 160rpx;
  bottom: 26rpx;
}

.goods-item {
  border: 1px solid #fff;
  border-radius: 15rpx;
  overflow: hidden;
}

.goods-item .goods-img {
  /* height: 350rpx; */
  margin-bottom: 10rpx;
}

.goods-price {
  float: right;
}

.release-btn {
  width: 50px;
  height: 50px;
  position: fixed;
  bottom: 40px;
  right: 30rpx;
}

.release-img {
  width: 50px;
  height: 50px;
}
