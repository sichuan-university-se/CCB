/**index.wxss**/

.swiper-tab {
  width: 100%;
  height: 40px;
  display: flex;
  justify-content: center;
  align-items: flex-start;
  box-shadow: 0 0 2px 0 #7a7070;
  color: #7a7070;
}

.tab-item {
  line-height: 40px;
  flex: 1 0 auto;
  text-align: center;
}

.on {
  border-bottom: 1px solid red;
  color: black
}

.swiper {
  width: 100%;
  height: 1000px;
}

.body {
  width: 690rpx;
  margin: 30rpx;
}

.ad-swiper {
  height: 100px;
  border-radius: 10px;
}

.ad-swiper-item {
  text-align: center;
  line-height: 100px;
}

.select-header {
  height: 40px;
  line-height: 40px;
  text-align: center;
  display: flex;
}

.search-input {
  border: 1px solid #7a7070;
  height: 40px;
  flex: 2 0 auto;
}