<!-- pages/liked/liked.wxml -->
<view>
  <view class="bg-white flex margin-sm padding text-center text-grey shadow-warp" style="border-radius: 10rpx">
    <view class="flex-sub solid-right">
      <text>活动</text>
    </view>
    <view class="flex-sub solid-right">
      <text>需求</text>
    </view>
    <view class="flex-sub">
      <text>商品</text>
    </view>
  </view>
  <view wx:for="{{likedList}}" wx:key>
    <view class="bg-white liked-item">
      <image class="cu-avatar lg" src="/assets/image/test.png"></image>
      <view class="liked-title">{{item.title}}</view>
      <view wx:if="{{item.price}}" class="liked-price text-red">￥{{item.price}}</view>
    </view>
  </view>
</view>